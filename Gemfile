source 'https://rubygems.org'

gem 'rails', github: 'rails/rails'  # This is a beta rails version!
gem 'rails-api'

gem 'sqlite3'
gem 'jbuilder'
gem 'unicorn-rails'

group :development do
  gem 'pry-rails'
  gem 'pry-byebug'
end

group :development, :test do 
  gem 'rspec-rails' 
  gem 'factory_girl_rails', '~> 4.0'
  gem 'guard-rspec'
  gem 'isbn_validation'
end
